<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="mainTextView">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginBottom">12dp</item>
    <item name="android:textSize">25sp</item>
    <item name="android:textColor">@color/black</item>
  </style>

  <style name="mainTextView.error">
    <item name="android:textColor">@color/error</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="mainTextView.success">
    <item name="android:textColor">@color/success</item>
  </style>

  <style name="mainTextView.warning">
    <item name="android:textColor">@color/warning</item>
  </style>

</resources>