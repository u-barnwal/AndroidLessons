<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  tools:context=".MainActivity">

  <TextView
    style="@style/mainTextView"
    android:autoLink="web"
    android:text="To know more visit us at https://google.com"
    android:textColor="@color/black" />

  <TextView
    style="@style/mainTextView"
    android:autoLink="phone"
    android:text="or call us at +91 1234567899"
    android:textColor="@color/black" />

  <TextView
    style="@style/mainTextView.error"
    android:text="Hello World" />

  <TextView
    style="@style/mainTextView.warning"
    android:text="Hello World" />

  <TextView
    style="@style/mainTextView.success"
    android:text="Hello World" />

  <TextView
    style="@style/mainTextView"
    android:text="Hello World" />

  <TextView
    style="@style/mainTextView"
    android:text="Hello World" />

  <ProgressBar
    android:id="@+id/pbMain"
    android:layout_width="100dp"
    android:layout_height="100dp"
    app:backgroundTint="@color/black" />

  <Button
    android:id="@+id/bShowPB"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Show PB"
    android:textSize="25sp" />

  <Button
    android:id="@+id/bHidePB"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Hide PB"
    android:textSize="25sp" />

  <Switch
    android:id="@+id/sToggle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:checked="true"
    android:text="Show More info" />

  <TextView
    android:id="@+id/tvContent"
    style="@style/mainTextView"
    android:text="Hello this is some random text" />

</LinearLayout>